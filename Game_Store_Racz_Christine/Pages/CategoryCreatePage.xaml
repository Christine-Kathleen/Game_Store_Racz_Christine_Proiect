<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Game_Store_Racz_Christine.Pages.CategoryCreatePage"
              BackgroundImage="bg.jpg">
    <ContentPage.Content>
        <StackLayout Margin="20">
            <Frame BackgroundColor="#ba0965" HasShadow="False" VerticalOptions="Center">
                <StackLayout Orientation="Vertical" Spacing="10">
                    <Entry x:Name="CategoryName" Text="{Binding CategoryName}" Placeholder="Enter the category name"   
                           PlaceholderColor="White" HeightRequest="50"   
                           TextColor="White"/>
                </StackLayout>
            </Frame>
            <Button Command="{Binding SaveButtonClickedCommand}" Text="Save" BackgroundColor="#ff8d03" TextColor="White" Padding="30,10,30,10" />
            <Button Command="{Binding BackToCategoriesPageCommand}" Text="Back" BackgroundColor="#ff8d03" TextColor="White" Padding="30,10,30,10" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>